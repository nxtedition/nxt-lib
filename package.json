{
  "name": "@nxtedition/lib",
  "version": "7.3.12",
  "license": "UNLICENSED",
  "author": "Robert Nagy <robert.nagy@boffins.se>",
  "files": [
    "hash.js",
    "ass.js",
    "rxjs/*",
    "util/*",
    "subtract-ranges.js",
    "serializers.js",
    "merge-ranges.js",
    "http.js",
    "deepstream.js",
    "logger.js",
    "mime.js",
    "weakCache.js",
    "couch.js",
    "app.js",
    "errors.js"
  ],
  "scripts": {
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "test": "jest --bail --watchAll"
  },
  "lint-staged": {
    "*.{js,jsx,md,ts}": [
      "eslint",
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "ecmaVersion": 2020
      }
    },
    "extends": [
      "standard",
      "prettier",
      "prettier/prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "/__tests__"
  ],
  "dependencies": {
    "abort-controller": "^3.0.0",
    "encoding-down": "^7.1.0",
    "hasha": "^5.2.2",
    "http-errors": "^2.0.0",
    "json5": "^2.2.0",
    "koa-compose": "^4.1.0",
    "lodash": "^4.17.21",
    "lru-cache": "^7.7.1",
    "mime": "^3.0.0",
    "moment-timezone": "^0.5.34",
    "nconf": "^0.11.3",
    "nested-error-stacks": "^2.1.0",
    "object-hash": "^3.0.0",
    "pino-std-serializers": "^5.1.1",
    "qs": "^6.10.3",
    "request-target": "^1.0.2",
    "split-string": "^6.0.0",
    "toobusy-js": "^0.5.1",
    "undici": "^4.16.0",
    "url-join": "^4.0.1",
    "xuid": "^4.0.10"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "pinst": "^2.1.6",
    "prettier": "^2.6.0"
  },
  "peerDependencies": {
    "@nxtedition/deepstream.io-client-js": ">=14.1.0",
    "pino": ">=7.0.0",
    "pino-pretty": ">=7.1.0",
    "rxjs": ">=6.0.0"
  }
}
