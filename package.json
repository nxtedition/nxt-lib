{
  "name": "@nxtedition/lib",
  "version": "4.5.4",
  "license": "UNLICENSED",
  "author": "Robert Nagy <robert.nagy@boffins.se>",
  "files": [
    "rxjs/*",
    "util/*",
    "subtract-ranges.js",
    "serializers.js",
    "merge-ranges.js",
    "http.js",
    "destroy.js",
    "deepstream.js",
    "logger.js",
    "level-party.js",
    "mime.js",
    "weakCache.js",
    "couch.js",
    "app.js"
  ],
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "test": "jest --bail --watchAll"
  },
  "lint-staged": {
    "*.{js,jsx,md,ts}": [
      "eslint",
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "ecmaVersion": 2020
      }
    },
    "extends": [
      "standard",
      "prettier",
      "prettier/prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "/__tests__"
  ],
  "dependencies": {
    "abort-controller": "^3.0.0",
    "encoding-down": "^7.0.0",
    "hasha": "^5.2.2",
    "http-errors": "^1.8.0",
    "json5": "^2.2.0",
    "koa-compose": "^4.1.0",
    "leveldown": "^6.0.0",
    "levelup": "^4.4.0",
    "lodash": "^4.17.21",
    "mime": "^2.5.0",
    "moment-timezone": "^0.5.33",
    "nconf": "^0.11.2",
    "nested-error-stacks": "^2.1.0",
    "object-hash": "^2.1.1",
    "request-target": "^1.0.2",
    "split-string": "^6.0.0",
    "toobusy-js": "^0.5.1",
    "undici": "^4.0.0-alpha.3",
    "url-join": "^4.0.1",
    "xuid": "^4.0.5"
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "rxjs": "^6.6.7",
    "rxjs-compat": "^6.6.7"
  },
  "peerDependencies": {
    "@nxtedition/deepstream.io-client-js": ">=14.1.0",
    "pino": "^6.0.0",
    "pino-pretty": "^4.0.0",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.0.0"
  }
}
