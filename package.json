{
  "name": "@nxtedition/lib",
  "version": "3.0.100",
  "files": [
    "rxjs/*",
    "util/*",
    "subtract-ranges.js",
    "serializers.js",
    "merge-ranges.js",
    "http.js",
    "destroy.js",
    "deepstream.js",
    "logger.js",
    "mime.js",
    "weakCache.js",
    "couch.js",
    "app.js"
  ],
  "scripts": {
    "test": "jest --bail --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "files=`git diff --cached --diff-filter=d --name-only | grep '\\.js$' || true` && ( [ -z \"$files\" ] || eslint --format=unix $files )",
      "commit-msg": "validate-commit-msg"
    }
  },
  "author": "Robert Nagy <robert.nagy@boffins.se>",
  "license": "UNLICENSED",
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "overrides": [
      {
        "files": [
          "*.test.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "rules": {
          "jest/no-disabled-tests": "warn",
          "jest/no-focused-tests": "error",
          "jest/no-identical-title": "error",
          "jest/prefer-to-have-length": "warn",
          "jest/valid-expect": "error"
        }
      }
    ]
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.0.0",
    "standard": "^16.0.3",
    "validate-commit-msg": "^2.14.0"
  },
  "peerDependencies": {
    "@nxtedition/deepstream.io-client-js": ">=12.0.0",
    "pino": "^6.0.0",
    "pino-pretty": "^4.0.0",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.0.0",
    "toobusy-js": "^0.5.1",
    "undici": "^3.0.0"
  },
  "dependencies": {
    "hasha": "^5.2.2",
    "http-errors": "^1.8.0",
    "json5": "^2.1.3",
    "lodash": "^4.17.20",
    "mime": "^2.4.7",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.32",
    "nested-error-stacks": "^2.1.0",
    "object-hash": "^2.1.1",
    "once": "^1.4.0",
    "request-target": "^1.0.2",
    "split-string": "^6.0.0",
    "url-join": "^4.0.1",
    "xuid": "^4.0.3"
  }
}
